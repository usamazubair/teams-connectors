{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.12/MicrosoftTeams.schema.json",
  "manifestVersion": "1.12",
  "id": "{{APPLICATION_ID}}",
  "version": "{{VERSION}}",
  "packageName": "{{PACKAGE_NAME}}",
  "developer": {
    "name": "usama.zubair",
    "websiteUrl": "https://{{PUBLIC_HOSTNAME}}",
    "privacyUrl": "https://{{PUBLIC_HOSTNAME}}/privacy.html",
    "termsOfUseUrl": "https://{{PUBLIC_HOSTNAME}}/tou.html"
  },
  "name": {
    "short": "ms teams connector",
    "full": "ms teams connector"
  },
  "description": {
    "short": "TODO: add short description here",
    "full": "TODO: add full description here"
  },
  "icons": {
    "outline": "icon-outline.png",
    "color": "icon-color.png"
  },
  "accentColor": "#D85028",
  "connectors": [
    {
      "connectorId": "{{CONNECTOR_ID}}",
      "configurationUrl": "https://{{PUBLIC_HOSTNAME}}/msTeamsConnector/config.html?name={loginHint}&tenant={tid}&group={groupId}&theme={theme}",
      "scopes": ["team"]
    }
  ],
  "permissions": ["identity", "messageTeamMembers"],
  "validDomains": ["{{PUBLIC_HOSTNAME}}"],
  "showLoadingIndicator": false
}
